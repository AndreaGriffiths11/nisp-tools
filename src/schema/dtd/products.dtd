<!ENTITY % DocBookDTD PUBLIC "-//OASIS//DTD DocBook XML V4.3//EN"
                             "docbkx43/docbookx.dtd">

%DocBookDTD;


<!ELEMENT products (productarea+)>

<!ELEMENT productarea (productclass+)>

<!ATTLIST productarea
          title CDATA #REQUIRED>


<!ELEMENT productclass (product+)>

<!ATTLIST productclass
          title CDATA #REQUIRED>

<!ELEMENT product ((standards | standard)?, ncf?, uri*, remarks?)>

<!ATTLIST product
          name   CDATA #REQUIRED
	  status CDATA #REQUIRED
	  rdcp   CDATA #IMPLIED>

<!ELEMENT standards (standard+)>

<!ELEMENT standard EMPTY>

<!ATTLIST standard
          ref CDATA #REQUIRED>

<!ELEMENT ncf (#PCDATA)>


<!--
<!ELEMENT uri (#PCDATA)>
-->

<!ELEMENT remarks %ho; (%tbl.entry.mdl;)*>

