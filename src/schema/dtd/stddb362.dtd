<!ELEMENT standards (revhistory, servicearea+, lists, records, externalrefs?, organisations)>

<!ELEMENT servicearea ((subarea | servicecategory)*)>
<!ATTLIST servicearea
          id ID #REQUIRED
          title CDATA #REQUIRED>

<!ELEMENT subarea ((servicecategory)*)>
<!ATTLIST subarea
          id ID #REQUIRED
          title CDATA #REQUIRED>

<!ELEMENT servicecategory ((category)*)>
<!ATTLIST servicecategory
          id ID #REQUIRED
          title CDATA #REQUIRED>

<!ELEMENT category ((subcategory)*)>
<!ATTLIST category
          id ID #REQUIRED
          title CDATA #REQUIRED>

<!ELEMENT subcategory EMPTY>
<!ATTLIST subcategory
          id ID #REQUIRED
          title CDATA #REQUIRED>

<!ELEMENT lists ((profile-list | sp-list)*)>

<!ELEMENT records ((standardrecord | profilerecord | referencerecord)*)>

<!ELEMENT standardrecord (debug?, ((standard | applicability | status)*))>
<!ATTLIST standardrecord
          tag CDATA #REQUIRED
          id ID #IMPLIED
          tref IDREF #IMPLIED>

<!ELEMENT profilerecord (debug?, ((profilenote | parts | applicability | status)* |
                          sremark))>
<!ATTLIST profilerecord
          tag CDATA #REQUIRED
          id ID #IMPLIED
          tref IDREF #REQUIRED>

<!ELEMENT referencerecord (sremark)>
<!ATTLIST referencerecord
          tag CDATA #REQUIRED
          tref IDREF #REQUIRED>

<!ELEMENT debug (#PCDATA)>

<!ELEMENT standard ((correction | alsoknown | comment)*,  parts?)>
<!ATTLIST standard
          orgid  CDATA #REQUIRED
          pubnum CDATA #REQUIRED
          date   CDATA #REQUIRED
          title  CDATA #REQUIRED>

<!ELEMENT correction (#PCDATA)>
<!ATTLIST correction
          cpubnum  CDATA #REQUIRED
          date     CDATA #REQUIRED>

<!ELEMENT alsoknown (#PCDATA)>
<!ATTLIST alsoknown
          orgid   CDATA #REQUIRED
          pubnum  CDATA #REQUIRED
          date    CDATA #REQUIRED>

<!ELEMENT comment (#PCDATA | ulink)*>

<!ELEMENT parts (standard)+>

<!ELEMENT profilenote (#PCDATA)>

<!-- applicability content model identical to DocBook entry -->

<!ELEMENT applicability %ho; (%tbl.entry.mdl;)*>

<!--

<!ELEMENT speclist (specnote | spectitle)+>

<!ELEMENT specnote (#PCDATA)>

<!ELEMENT spectitle (#PCDATA)>


-->

<!ELEMENT status (info?, uri?, history)>
<!ATTLIST status
          mode   (unknown|rejected|retired) "unknown"
          stage  CDATA #REQUIRED>

<!ELEMENT info (#PCDATA | ulink)*>

<!ELEMENT history (event)+>

<!ELEMENT event (#PCDATA)>
<!ATTLIST event
          flag    (added|changed|deleted)   #REQUIRED
          date    CDATA   #REQUIRED
          rfcp    CDATA   #IMPLIED
          version CDATA   #REQUIRED>


<!ELEMENT sremark (#PCDATA | xref)*>

<!ELEMENT externalrefs (exref*)>

<!ELEMENT exref EMPTY>

<!ATTLIST exref
          id     ID      #REQUIRED>


<!ELEMENT organisations (orgkey*)>

<!ELEMENT orgkey EMPTY>
<!ATTLIST orgkey
          key    CDATA   #REQUIRED
          text   CDATA   #REQUIRED>


<!ELEMENT profile-list (pf-view*)>
<!ATTLIST profile-list
          id ID #REQUIRED
          tag CDATA #REQUIRED
          tref IDREF #IMPLIED>


<!ELEMENT pf-view (parea?, (header?), pcatego? , pselect*, remarks?, rationale?)>
<!ATTLIST pf-view
          idx ID #IMPLIED
          category CDATA #IMPLIED>

<!ELEMENT parea (#PCDATA|para|indexterm)*>
<!ATTLIST parea
          svcarea IDREF #IMPLIED>

<!ELEMENT pcatego (#PCDATA|para|indexterm)*>
<!ATTLIST pcatego
          svcarea IDREF #IMPLIED>

<!ELEMENT protocol (#PCDATA|para|indexterm)*>

<!ELEMENT pselect (#PCDATA)>
<!ATTLIST pselect
          id IDREF #REQUIRED>

<!ELEMENT sp-list (sp-view*)>
<!ATTLIST sp-list
          tref IDREF #IMPLIED>

<!ELEMENT sp-view (ncoe?, (header?), select*, remarks?, rationale?)>
<!ATTLIST sp-view
          idx ID #IMPLIED
          category CDATA #IMPLIED>

<!ELEMENT ncoe (#PCDATA)>

<!ELEMENT header EMPTY>

<!ELEMENT select (#PCDATA)>
<!ATTLIST select
          id IDREF #REQUIRED
	        mode (unknown|mandatory|emerging|midterm|farterm|fading) #REQUIRED>

<!ELEMENT remarks (#PCDATA|para|indexterm)*>

<!ELEMENT rationale (#PCDATA | para | indexterm)*>


