<!ENTITY % DocBookDTD PUBLIC "-//OASIS//DTD DocBook XML V4.3//EN"
                             "docbkx43/docbookx.dtd">
%DocBookDTD;


<!-- ...................................................................... -->


<!ELEMENT ta-standards (servicearea+, externalrefs?, organisations)>

<!ELEMENT servicearea (serviceclass+)>

<!ATTLIST servicearea
          id ID #REQUIRED
          title CDATA #REQUIRED>

<!ELEMENT serviceclass (ncsp-list?, (standardrecord | profilerecord | referencerecord)*)>

<!ATTLIST serviceclass
          cid ID #REQUIRED
          title CDATA #IMPLIED>

<!ELEMENT standardrecord (debug?, ((standard | applicability | status)*                           
))>

<!ATTLIST standardrecord
          tag CDATA #REQUIRED
          id ID #IMPLIED>

<!ELEMENT profilerecord (debug?, ((profilenote | parts | applicability | status)* |
                          sremark))>

<!ATTLIST profilerecord
          tag CDATA #REQUIRED
          id ID #IMPLIED>


<!ELEMENT referencerecord (sremark)>


<!ATTLIST referencerecord
          tag CDATA #REQUIRED>



<!ELEMENT debug (#PCDATA)>

<!ELEMENT standard ((correction | alsoknown | comment)*,  parts?)>

<!ATTLIST standard
          orgid  CDATA #REQUIRED
          pubnum CDATA #REQUIRED
          date   CDATA #REQUIRED
          title  CDATA #REQUIRED>

<!ELEMENT alsoknown (#PCDATA)>

<!ATTLIST alsoknown
          orgid   CDATA #REQUIRED
          pubnum  CDATA #REQUIRED
          date    CDATA #REQUIRED>

<!ELEMENT comment (#PCDATA | ulink)*>

<!ELEMENT correction (#PCDATA)>

<!ATTLIST correction
          cpubnum  CDATA #REQUIRED
          date     CDATA #REQUIRED>


<!ELEMENT parts (standard)+>

<!ELEMENT profilenote (#PCDATA)>


<!--
<!ELEMENT applicability (#PCDATA | para | itemizedlist | orderedlist |    
                         emphasis | figure | mediaobject | xref)*>
-->

<!-- applicability content model identical to DocBook entry -->

<!ELEMENT applicability %ho; (%tbl.entry.mdl;)*>

<!ELEMENT info (#PCDATA | ulink)*>

<!ELEMENT speclist (specnote | spectitle)+>

<!ELEMENT specnote (#PCDATA)>

<!ELEMENT spectitle (#PCDATA)>

<!ELEMENT status (info?, uri?, history)>

<!ATTLIST status
          stage  CDATA #REQUIRED>


<!ELEMENT history (event)+>

<!ELEMENT event (#PCDATA)>

<!ATTLIST event
          flag    (added|changed|deleted)   #REQUIRED
          date    CDATA   #REQUIRED
          rfcp    CDATA   #IMPLIED
          version CDATA   #REQUIRED
>


<!ELEMENT sremark (#PCDATA | xref)*>


<!--
<!ELEMENT ulink (#PCDATA)>


<!ATTLIST ulink
          uri CDATA #IMPLIED
>
-->

<!--
<!ELEMENT uri (#PCDATA)>
-->

<!ELEMENT externalrefs (exref*)>

<!ELEMENT exref EMPTY>

<!ATTLIST exref
          id     ID      #REQUIRED>


<!ELEMENT organisations (orgkey*)>

<!ELEMENT orgkey EMPTY>

<!ATTLIST orgkey
          key    CDATA   #REQUIRED
          text   CDATA   #REQUIRED>




<!ELEMENT ncsp-list (ncsp-view*)>

<!ELEMENT ncsp-view (nnec?, (class? | subclass?), mandatory?, emerging?, 
                     fading?, remarks?, rationale?)>

<!ATTLIST ncsp-view
          category CDATA #IMPLIED>



<!ELEMENT nnec (#PCDATA)>


<!ELEMENT class EMPTY>

<!ELEMENT subclass (#PCDATA)>

<!ATTLIST subclass
          level CDATA #REQUIRED>

<!ELEMENT mandatory (#PCDATA)>

<!ATTLIST mandatory
          id IDREF #REQUIRED>

<!ELEMENT emerging (#PCDATA)>

<!ATTLIST emerging 
          id IDREF #REQUIRED>

<!ELEMENT fading (#PCDATA)>

<!ATTLIST fading
          id IDREF #IMPLIED>

<!ELEMENT remarks (#PCDATA|para|indexterm)*>

<!ELEMENT rationale (#PCDATA | para | indexterm)*>


