<!ENTITY % DocBookDTD PUBLIC "-//OASIS//DTD DocBook XML V4.5//EN"
                             "docbkx45/docbookx.dtd">
%DocBookDTD;


<!-- ...................................................................... -->


<!ELEMENT standards (revhistory?, taxonomy, lists, records, community-of-interest, organisations)>
<!ATTLIST standards
          revision CDATA #REQUIRED>

<!-- .......................... TAXONOMY .................................. -->

<!ELEMENT taxonomy (servicearea+)>

<!ELEMENT servicearea ((subarea | servicecategory)*)>
<!ATTLIST servicearea
          id ID #REQUIRED
          title CDATA #REQUIRED
          emUUID CDATA #REQUIRED>

<!ELEMENT subarea ((servicecategory)*)>
<!ATTLIST subarea
          id ID #REQUIRED
          title CDATA #REQUIRED
          emUUID CDATA #REQUIRED>

<!ELEMENT servicecategory ((category)*)>
<!ATTLIST servicecategory
          id ID #REQUIRED
          title CDATA #REQUIRED
          emUUID CDATA #REQUIRED>

<!ELEMENT category ((subcategory)*)>
<!ATTLIST category
          id ID #REQUIRED
          title CDATA #REQUIRED
          emUUID CDATA #REQUIRED>

<!ELEMENT subcategory EMPTY>
<!ATTLIST subcategory
          id ID #REQUIRED
          title CDATA #REQUIRED
          emUUID CDATA #REQUIRED>


<!-- .......................... LISTS .................................. -->


<!ELEMENT lists (sp-list*)>


<!ELEMENT sp-list (sp-view*)>
<!ATTLIST sp-list
          tref IDREF #IMPLIED>

<!ELEMENT sp-view (select*, remarks?, rationale?)>
<!ATTLIST sp-view
          idx ID #IMPLIED>



<!ELEMENT select (#PCDATA)>
<!ATTLIST select
          id IDREF #REQUIRED
          mode (unknown|mandatory|emerging|fading) #REQUIRED>

<!ELEMENT remarks (#PCDATA|para|indexterm)*>

<!ELEMENT rationale (#PCDATA | para | indexterm)*>


<!-- .......................... RECORDS .................................. -->


<!ELEMENT records ((standard | profile | baselineprofile)*)>

<!ELEMENT standard (document, applicability, status, uuid?)>
<!ATTLIST standard
          tag CDATA #REQUIRED
          id ID #REQUIRED>

<!-- document -->
          
<!ELEMENT document (substandards?, correction*, alsoknown?, comment?)>
<!ATTLIST document
          orgid   CDATA #REQUIRED
          pubnum  CDATA #REQUIRED
          date    CDATA #REQUIRED
          title   CDATA #REQUIRED
          version CDATA #IMPLIED>

<!ELEMENT substandards (refstandard+)>

<!ELEMENT refstandard EMPTY>
<!ATTLIST refstandard
          refid IDREF #REQUIRED>


<!ELEMENT correction (#PCDATA)>
<!ATTLIST correction
          cpubnum  CDATA #REQUIRED
          date     CDATA #REQUIRED>

<!ELEMENT alsoknown (#PCDATA)>
<!ATTLIST alsoknown
          orgid   CDATA #REQUIRED
          pubnum  CDATA #REQUIRED
          date    CDATA #REQUIRED>

<!ELEMENT comment (#PCDATA | ulink)*>


<!-- applicability -->

<!ELEMENT applicability %ho; (%tbl.entry.mdl;)*>

<!-- status -->

<!ELEMENT status (info?, uri?, history)>
<!ATTLIST status
          mode   (accepted|rejected) "accepted">

<!ELEMENT info (#PCDATA | ulink)*>

<!ELEMENT history (event)+>

<!ELEMENT event (#PCDATA)>
<!ATTLIST event
          flag    (added|changed|deleted)   #REQUIRED
          date    CDATA   #REQUIRED
          rfcp    CDATA   #IMPLIED
          version CDATA   #REQUIRED>


<!ELEMENT uuid (#PCDATA)>

<!-- profile and baselineprofile -->          

<!ELEMENT profile (profilespec, profilenote?, parts, configuration?,  applicability, status, uuid?)>
<!ATTLIST profile
          type (base | coi-minor | coi) "base"
          tag CDATA #REQUIRED
          id ID #REQUIRED>

<!ELEMENT baselineprofile (profilespec, profilenote?, parts, configuration?,  applicability, status, uuid?)>
<!ATTLIST baselineprofile
          tag CDATA #REQUIRED
          id ID #REQUIRED>


<!ELEMENT profilespec EMPTY>
<!ATTLIST profilespec
          orgid   CDATA #IMPLIED
          pubnum  CDATA #IMPLIED
          date    CDATA #IMPLIED
          title   CDATA #REQUIRED
          version CDATA #IMPLIED>


<!ELEMENT configuration (#PCDATA)>



<!ELEMENT parts (refstandard|refprofile)+>


<!ELEMENT refprofile EMPTY>
<!ATTLIST refprofile
          refid IDREF #REQUIRED>


<!ELEMENT profilenote (#PCDATA)>


<!-- applicability content model identical to DocBook entry -->



<!-- ................. COMMUNITY OF INTERESTS ............................ -->

<!ELEMENT community-of-interest (community*)>

<!ELEMENT community (profile*)>
<!ATTLIST community
          coi     CDATA      #REQUIRED
          text    CDATA      #REQUIRED>


<!-- ....................... ORGANISATION ................................ -->


<!ELEMENT organisations (orgkey*)>

<!ELEMENT orgkey EMPTY>
<!ATTLIST orgkey
          key    CDATA   #REQUIRED
          text   CDATA   #REQUIRED>


<!ELEMENT header EMPTY>


