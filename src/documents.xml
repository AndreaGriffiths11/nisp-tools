<?xml version="1.0"?>

<!DOCTYPE documents PUBLIC "-//DDRE//DTD Documents XML V1.0//EN"
                           "schema/dtd/documents.dtd" [

<!ENTITY % src-info SYSTEM "VERSION">
%src-info;

]>

<documents>
  <versioninfo>
    <package major="&src-version-major;" minor="&src-version-minor;"/>
    <release date="&src-release-date;"/>
  </versioninfo>

  <directory dir="volume1">
    <docinfo id="vol1">
      <main>vol1.xml</main>
      <figures/>
      <titles>
        <short>V1</short>
        <title>Volume 1</title>
        <menutitle>Introduction</menutitle>
        <longtitle>Introduction and Management</longtitle>
      </titles>

      <resolve>resolve.xsl</resolve>

      <targets>
        <target type="html">index.html</target>
        <target type="pdf">NISP-Vol1</target>
      </targets>
    </docinfo>
  </directory>

  <directory dir="volume2">
    <docinfo id="vol2">
      <main>vol2.xml</main>
      <figures/>
      <titles>
        <short>V2</short>
        <title>Volume 2</title>
        <menutitle>Standards</menutitle>
        <longtitle>Agreed Interoperability Standards and Profiles</longtitle>
      </titles>

      <resolve usedb="yes" db="standards.xml">resolve-nodes.xsl</resolve>

      <targets>
        <target type="html">index.html</target>
        <target type="pdf">NISP-Vol2</target>
      </targets>
    </docinfo>
  </directory>


  <directory dir="volume3">
    <docinfo id="vol3">
      <main>vol3.xml</main>
      <figures/>
      <titles>
        <short>V3</short>
        <title>Volume 3</title>
        <menutitle>Profiles</menutitle>
        <longtitle>Candidate Standards and Profiles</longtitle>
      </titles>

      <resolve usedb="yes" db="standards.xml">resolve-nodes.xsl</resolve>

      <targets>
        <target type="html">index.html</target>
        <target type="pdf">NISP-Vol3</target>
      </targets>
    </docinfo>
  </directory>

</documents>
