<?xml version="1.0"?>

<!-- ===================================================================

Build file for the internet version of the NC3TA Technical Architecture

All documents will have no label


The build file have by default 


See the file build.xml for further information


-->

<project name="NC3TA (Internet version)" default="web" basedir=".">


<property name="build.dir" value="${basedir}/build.internet"/>

<!-- =================================================================== -->
<!-- Internet publication parameters (DON'T MODIFY ANY OF THESE)         -->
<!-- =================================================================== -->

<property name="for.internet.publication" value="1"/>
<property name="internet.postfix" value="-internet"/>

<property name="internet.opts" 
          value=" for.internet.publication=${for.internet.publication} internet.postfix=${internet.postfix}"/>


<!-- =================================================================== -->
<!-- Targets                                                             -->
<!-- =================================================================== -->


<target name="web" description="* Create website for internet">
  <ant target="web"/>
</target>

<target name="pdf-only" description="* Create a zip containing only PDF files (internet)">
  <ant target="pdf-only"/>
</target>


<target name="clean" description="* Clean all the internet build">
  <ant target="clean-build"/>
</target>


</project>
